{
  "kind": "collectionType",
  "collectionName": "video_summaries",
  "info": {
    "singularName": "video-summary",
    "pluralName": "video-summaries",
    "displayName": "Video Summary",
    "description": "YouTube video summaries with AI-generated transcripts and summaries"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "youtubeUrl": {
      "type": "string",
      "required": true
    },
    "youtubeVideoId": {
      "type": "string",
      "required": true
    },
    "title": {
      "type": "string"
    },
    "thumbnail": {
      "type": "string"
    },
    "duration": {
      "type": "integer",
      "min": 0
    },
    "transcript": {
      "type": "text"
    },
    "summary": {
      "type": "text"
    },
    "status": {
      "type": "enumeration",
      "enum": ["processing", "completed", "failed"],
      "default": "processing"
    },
    "errorMessage": {
      "type": "text"
    },
    "user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user"
    },
    "videoQuestions": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::video-question.video-question",
      "mappedBy": "videoSummary"
    }
  }
}
